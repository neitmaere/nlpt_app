								<items>
									<core:Item key="{Gamers>gamer_number}" text="{Gamers>nickname}"/>
								</items>
							</Select>
							<ObjectNumber number="{Racing4>points}" />
						</cells>
					</ColumnListItem>
				</items>
			</Table>

			
		</content>
		<buttons>
			<Button text="Speichern" type="Accept" press="onSaveRacing" />
			<Button text="Abbrechen" type="Reject" press="onCancel" />
		</buttons>
	</Dialog>
</core:FragmentDefinition>