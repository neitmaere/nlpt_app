<mvc:View controllerName="com.nlpt.app.controller.Gamers"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form"
	xmlns="sap.m">

	<Page title="Gamers">
		<Table id="idProductsTable" inset="false" items="{Gamers>/}">
			<columns>
				<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
					<Text text="Nickname" />
				</Column>
				<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
					<Text text="Vorname" />
				</Column>
				<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
					<Text text="Nachname" />
				</Column>
				<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
					<Text text="2018" />
				</Column>
				<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
					<Text text="2017" />
				</Column>
				<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
					<Text text="2016" />
				</Column>
				<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
					<Text text="2016" />
				</Column>
			</columns>
			<items>
				<ColumnListItem>
					<cells>
						<ObjectIdentifier title="{Gamers>nickname}" />
						<Text text="{Gamers>firstname}" />
						<Text text="{Gamers>lastname}" />
						<ObjectIdentifier title="{Gamers>2018}" />
						<ObjectIdentifier title="{Gamers>2017}" />
						<ObjectIdentifier title="{Gamers>2016}" />
						<ObjectIdentifier title="{Gamers>2015}" />
					</cells>
				</ColumnListItem>
			</items>
		</Table>
	</Page>
</mvc:View>