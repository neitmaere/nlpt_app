{
	"_version": "1.1.0",
	"sap.app": {
		"_version": "1.1.0",
		"id": "com.nlpt.app",
		"type": "application",
		"i18n": "i18n/i18n.properties",
		"applicationVersion": {
			"version": "1.0.0"
		},
		"title": "{{appTitle}}",
		"description": "{{appDescription}}",
		"sourceTemplate": {
			"id": "ui5template.basicSAPUI5ApplicationProject",
			"version": "1.32.0"
		}
	},

	"sap.ui": {
		"_version": "1.1.0",
		"technology": "UI5",
		"icons": {
			"icon": "",
			"favIcon": "",
			"phone": "",
			"phone@2": "",
			"tablet": "",
			"tablet@2": ""
		},
		"deviceTypes": {
			"desktop": true,
			"tablet": true,
			"phone": true
		},
		"supportedThemes": [
			"sap_hcb",
			"sap_bluecrystal"
		],
		"fullWidth": true
	},

	"sap.ui5": {
		"_version": "1.1.0",
		"rootView": {
			"viewName": "com.nlpt.app.view.App",
			"type": "XML"
		},
		"dependencies": {
			"minUI5Version": "1.30.0",
			"libs": {
				"sap.ui.core": {},
				"sap.m": {},
				"sap.ui.layout": {}
			}
		},
		"contentDensities": {
			"compact": true,
			"cozy": true
		},
		"models": {
			"i18n": {
				"type": "sap.ui.model.resource.ResourceModel",
				"settings": {
					"bundleName": "com.nlpt.app.i18n.i18n"
				}
			}
		},
		"resources": {
			"css": [{
				"uri": "css/style.css"
			}]
		},
		"routing": {
			"config": {
				"routerClass": "sap.m.routing.Router",
				"viewType": "XML",
				"viewPath": "com.nlpt.app.view",
				"controlId": "pageContainer",
				"controlAggregation": "pages",
				"bypassed": {
					"target": [
						"notFound"
					]
				},
				"async": true
			},
			"routes": [
				{
					"pattern": "",
					"name": "app",
					"target": [
						"news"
					]
				},
				{
					"pattern": "overview/{year}",
					"name": "overview",
					"target": [
						"overview"
					]
				},
				{
					"pattern": "categories/{year}",
					"name": "categories",
					"target": [
						"categories"
					]
				},
				{
					"pattern": "gamers/{year}",
					"name": "gamers", 
					"target": [
						"gamers"
					]
				},
				{
					"pattern": "gamerDetails/{gamerId}",
					"name": "gamerDetails",
					"target": [
						"gamerDetails"
					]
				},
				{
					"pattern": "news",
					"name": "news",
					"target": [
						"news"
					]
				},
				{
					"pattern": "sponsors",
					"name": "sponsors",
					"target": [
						"sponsors"
					]
				}
			],
			"targets": {
				"app": {
					"viewName": "App",
					"viewId": "app",
					"viewLevel": 1,
					"title": "NLPT App"
				},
				"overview": {
					"viewName": "Overview",
					"viewId": "overview",
					"viewLevel": 2,
					"title": "{i18n>objectViewTitle}"
				},
				"categories": {
					"viewName": "Categories",
					"viewId": "categories",
					"viewLevel": 2
				},
				"gamers": {
					"viewName": "Gamers",
					"viewId": "gamers",
					"viewLevel": 2
				},
				"gamerDetails": {
					"viewName": "DamerDetails",
					"viewId": "gamerDetails",
					"viewLevel": 3
				},
				"news": {
					"viewName": "News",
					"viewId": "news",
					"viewLevel": 2
				},
				"sponsors": {
					"viewName": "Sponsors",
					"viewId": "sponsors",
					"viewLevel": 2
				}
			}
		}
	}
}